<?xml version="1.0" encoding="UTF-8"?>

<server port="8080">
    <service url="*">
        <!-- need to list the allowed headers here, otherwise we just let everything through -->
        
        <authentication className="com.bittrust.authentication.NullAuthenticator">
            <param name="result">true</param>
        </authentication>

        <authorization className="com.bittrust.authorization.NullAuthorizer">
            <param name="result">true</param>
        </authorization>

        <auditing className="com.bittrust.auditing.Verbose">
        </auditing>
        
        <session className="com.bittrust.session.MemoryStore">
        </session>
    </service>

</server>
