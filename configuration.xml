<?xml version="1.0" encoding="UTF-8"?>

<server port="8080">
    <service url="*">
        <!-- need to list the allowed headers here, otherwise we just let everything through -->
        <authentication className="com.bittrust.authorization.ActiveDirectory">
          <param name="bind-name">test</param>
          <param name="bind-pass">test</param>
        </authentication>
        <authorization className="com.bittrust.authorization.NullAuthorizer">
        </authorization>
        <auditing className="com.bittrust.auditing.Verbose">
        </auditing>
    </service>

    <service url="/phaaas">
        <authentication className="com.bittrust.authorization.ActiveDirectory">
          <param name="bind-name">test</param>
          <param name="bind-pass">test</param>
        </authentication>
        <authorization className="com.bittrust.authorization.NullAuthorizer">
        </authorization>
        <auditing className="com.bittrust.auditing.Verbose">
        </auditing>
    </service>

</server>
